---
import {getCollection, render} from 'astro:content';

import GlobalLayout from "../../patterns/layouts/GlobalLayout/GlobalLayout.astro";
import ContentHero from "../../patterns/components/ContentHero/ContentHero.astro";
import {JArrowLink} from "@ben-ryder/jigsaw-react";
import CardSimpleListing from "../../patterns/components/CardSimpleListing/CardSimpleListing.astro";
import {formatTimestamp} from "../../utils/format-timestamp";
import {getReadingTime} from "../../utils/get-reading-time";

export async function getStaticPaths() {
	const posts = await getCollection('posts');
	return posts.map(post => ({
		params: { slug: post.id }, props: { post },
	}));
}

const { post } = Astro.props;
const { Content } = await render(post);

const metadata = [
	[
		{
			icon: "clock",
			text: getReadingTime(post.data.content ?? "")
		},
	],
	[
		{
			icon: "calendar",
			text: `Published ${formatTimestamp(post.data.published_at)}`,
		}
	]
]
if (post.data.updated_at) {
	metadata[1].push({
		icon: "pencil",
		text: `Updated ${formatTimestamp(post.data.updated_at)}`,
	})
}
---

<GlobalLayout title={post.data.name}>
	<ContentHero
		title={post.data.name}
		metadata={metadata}
        tags={[]}
		tagsBaseUrl="/posts/tags/"
	/>

	<div class="max-width-container container-spacing">
		<JArrowLink href="/posts" direction="left">All Posts</JArrowLink>
	</div>

	<div class="max-width-container">
		<div class="j-prose">
			<Content />
		</div>
	</div>

	{(post.data.related_posts.length > 0 || post.data.related_projects.length > 0) &&
		<div class="max-width-container j-prose">
			<hr />
		</div>
	}

	{post.data.related_projects.length > 0 &&
		<CardSimpleListing
			title="👨‍💻 Related Projects"
			cards={post.data.related_projects.map(project => {
				return {
					title: project.name,
					description: project.description,
					link: `/projects/${project.slug}`
				}
			})}
		/>
	}

	{post.data.related_posts.length > 0 &&
		<CardSimpleListing
			title="📝 Related Posts"
			cards={post.data.related_posts.map(post => {
				return {
					title: post.name,
					description: post.description,
					link: `/posts/${post.slug}`
				}
			})}
		/>
	}
</GlobalLayout>
