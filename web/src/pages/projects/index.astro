---
import {apiClient} from "@lib/api/api-client";
import GlobalLayout from "../../layouts/GlobalLayout/GlobalLayout.astro";
import {CardComplexListing} from "../../components/CardComplexListing/CardComplexListing";

const projects = await apiClient.getProjects()
const projectTags = await apiClient.getProjectTags()
---

<GlobalLayout title="Projects">
	<CardComplexListing
		title="👨‍💻 Projects"
		description="All my projects"
		cards={projects.map(project => {
			return {
				title: project.name,
				description: project.description,
				link: `/projects/${project.slug}`,
				tags: project.tags,
				dateCreated: project.dateCreated,
				datePublished: project.datePublished,
				dateUpdated: project.dateUpdated
			}
		})}
		tags={projectTags}
		client:load
	/>
</GlobalLayout>
